{
  "name": "@magicolala/neo-chess-board",
  "version": "1.0.1",
  "description": "Canvas chessboard library with React bindings and PGN recorder (Chessbook-like feel)",
  "keywords": [
    "chess",
    "chessboard",
    "canvas",
    "react",
    "typescript",
    "pgn",
    "board-games",
    "ui-components",
    "game-development",
    "chess-engine",
    "interactive",
    "visualization"
  ],
  "homepage": "https://github.com/magicolala/Neo-Chess-Board-Ts-Library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicolala/Neo-Chess-Board-Ts-Library.git"
  },
  "bugs": {
    "url": "https://github.com/magicolala/Neo-Chess-Board-Ts-Library/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "dist/style.css",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.json && vite build && npm run build:css",
    "build:lib": "tsc -p tsconfig.json && npm run build:css",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/style.css --minify",
    "build:demo": "cd demo && vite build --mode production",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "prepublishOnly": "npm run build:lib",
    "docs:api": "typedoc",
    "docs:api:watch": "typedoc --watch",
    "docs:serve": "mkdocs serve",
    "docs:build": "npm run docs:api && mkdocs build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "optionalDependencies": {
    "chess.js": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/cli": "^4.1.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chess.js": "^0.13.7",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.16",
    "terser": "^5.43.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.3.5"
  },
  "license": "MIT"
}
